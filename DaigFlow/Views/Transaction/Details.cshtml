@model DaigFlow.Models.Transactions
@{
    Layout = "_admin";
}
@{
    ViewData["Title"] = "Transaction Details";
}

<!-- Page Container -->
<div class="container my-4">
    <h1 class="display-4 text-center mb-4">Transaction Details</h1>

    <!-- Transaction Details Card -->
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Transaction Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsSuccessful)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IsSuccessful)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Daig)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Daig.Name)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
