@model DaigFlow.Models.Transactions
@{
    Layout = "_admin";
}
@{
    ViewData["Title"] = "Delete";
}

<!-- Page Header -->
<div class="container my-4">
    <h1 class="display-4 text-center mb-4">Delete Transaction</h1>

    <!-- Confirmation Message -->
    <div class="alert alert-warning" role="alert">
        <h3 class="text-center">Are you sure you want to delete this transaction?</h3>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Transaction Details -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Transaction Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IsSuccessful)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsSuccessful)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Daig)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Daig.Name)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <!-- Delete Form -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
