@model DaigFlow.Models.User

@{
    ViewData["Title"] = "Create Daig";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="container my-4">
    <h1 class="display-4 text-center mb-4">Create User</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-primary shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add New User</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fs-5">Name</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter Name" />
                            <div class="invalid-feedback">
                                <span asp-validation-for="Username"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fs-5">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                            <div class="invalid-feedback">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fs-5">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                            <div class="invalid-feedback">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-lg">Create</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
